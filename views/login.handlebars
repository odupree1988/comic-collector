<div class="container mt-5" style="width: 100%;">
  <div class="row">
    <div
      class="col-sm col-md col-lg col-xl col-xxl p-2 rounded"
      style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.6) 50%,rgba(255,255,255,0.9) 150%), url(IMG/dc.jpeg); 
        background-size: cover; 
        background-position: center;"
    >

      <h2 class="text-center">Sign In To Add To Your Collection!</h2>
      <form class="login-form">
        <div class="mb-3">
          <label
            for="email-login"
            class="form-label"
          >Email:</label>
          <input
            type="email"
            class="form-control bg-transparent"
            id="email-login"
            placeholder="email@address.com"
          />
        </div>
        <div class="mb-2">
          <label
            for="password-login"
            class="form-label"
          >Password:</label>
          <input
            type="password"
            class="form-control bg-transparent"
            id="password-login"
            placeholder="Password"
          />
        </div>
        <div class="row mb-3">
          <div class="col-sm-10 offset-sm-2">
          </div>
        </div>
        <div class="col text-center">
          <button type="submit" class="btn btn-light">Sign In</button>
          <p class="mt-3">Don't have an account?
            <a href="/signup">Sign Up</a>
            now!
          </p>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/javascript/login.js"></script>