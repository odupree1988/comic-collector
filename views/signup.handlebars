<div class="container mt-5" style="width: 100%;">
  <div class="row">
    <div
      class="col-sm col-md col-lg col-xl col-xxl p-2 rounded"
      style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.6) 50%,rgba(255,255,255,0.9) 150%), url(IMG/dc.jpeg); 
        background-size: cover; 
        background-position: center;"
    >
      {{! style="background-image: url('IMG/lightning.jpg')"> }}
      <h2 class="text-center">Create An Account Today!</h2>
      <form class="signup-form">
        <div class="mb-3">
          <label for="username-signup" class="form-label">Username:</label>
          <input
            type="text"
            class="form-control bg-transparent"
            id="username-signup"
            placeholder="Stan Lee"
          />
        </div>
        <div class="mb-3">
          <label for="email-signup" class="form-label">Email:</label>
          <input
            type="email"
            class="form-control bg-transparent"
            id="email-signup"
            placeholder="email@address.com"
          />
        </div>
        <div class="mb-2">
          <label for="password-signup" class="form-label">Password:</label>
          <input
            type="password"
            class="form-control bg-transparent"
            id="password-signup"
            placeholder="Password"
          />
        </div>
        <div class="row mb-3">
          <div class="col-sm-10 offset-sm-2">
          </div>
        </div>
        <div class="col text-center">
          <button type="submit" class="btn btn-light">Sign up</button>
          <p class="mt-3">Already have an account?
            <a href="/login">Sign In</a>
            here!
          </p>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/javascript/signup.js"></script>